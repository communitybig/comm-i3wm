[colors]
background = #2E3440
background-alt = #3B4252
foreground = #D8DEE9
primary = #81A1C1
accent = #D08770
alert = #BF616A

[bar/main]
width = 100%
height = 27
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}
primary = ${colors.primary}
accent = ${colors.accent}

; Adiciona margem entre os módulos
module-margin-left = 2
module-margin-right = 2

font-0 = "Noto Sans:size=10;2"
font-1 = "Symbols Nerd Font:size=12;3"

modules-left = workspaces
modules-center = date
; Opção 1: Com espaçamento definido pelas margens
modules-right = network battery volume logout reboot shutdown
; Opção 2: Com separadores (descomente para usar)
; modules-right = network separator battery separator volume separator logout separator reboot separator shutdown

[module/separator]
type = custom/text
content = "│"
content-foreground = ${colors.primary}
content-padding = 1

[module/workspaces]
type = internal/i3
pin-workspaces = false
enable-scroll = false

label-focused = %index%
label-focused-background = ${colors.primary}
label-focused-underline = ${colors.accent}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = ""
label-urgent = ""

; Mostrar apenas 2 workspaces ativos
index-sort = true
wsp = 2

[module/date]
type = internal/date
interval = 1

date = %a %d %b
time = %H:%M

label = %date%  %time%
format-padding = 2

[module/network]
type = custom/script
interval = 5
exec = ~/.config/polybar/network.sh
click-left = nm-connection-editor &
format-padding = 1

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charged = <label-charged>
format-charging = <label-charging>
format-discharging = <label-discharging>
format-padding = 1

label-charged =  %percentage%%
label-charging =  %percentage%%
label-discharging =  %percentage%%

[module/volume]
type = internal/pulseaudio

format-volume = <label-volume>
format-padding = 1
label-volume =  %percentage%%
label-muted =  muted

[module/logout]
type = custom/text
content = "  "
content-foreground = ${colors.accent}
click-left = loginctl terminate-user $USER  # Encerra sessão
background = ${colors.background}
content-padding = 1

[module/reboot]
type = custom/text
content = "  "
content-foreground = ${colors.accent}
click-left = systemctl reboot
background = ${colors.background}
content-padding = 1

[module/shutdown]
type = custom/text
content = "  "
content-foreground = ${colors.accent}
click-left = systemctl poweroff
background = ${colors.background}
content-padding = 1
