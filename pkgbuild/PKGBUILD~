pkgver=$(date +%Y%m%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('MIT')
url="https://github.com/communitybig/${pkgname}"
source=("git+${url}.git","configure-btop.sh")
md5sums=('SKIP')
depends=(
	i3-wm
)
